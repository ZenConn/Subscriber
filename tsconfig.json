{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "declaration": true,
    "target": "es2015",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
